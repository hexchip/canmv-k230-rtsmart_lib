menu "RT-Smart 3rd-party Configuration"

    menuconfig RTSMART_3RD_PARTY_ENABLE_FREETYPE
        bool "Enable Build FreeType"
        default y

        if RTSMART_3RD_PARTY_ENABLE_FREETYPE

        endif

    menuconfig RTSMART_3RD_PARTY_ENABLE_MBEDTLS
        bool "Enable Build MbedTLS"
        default y

        if RTSMART_3RD_PARTY_ENABLE_MBEDTLS
            config RTSMART_3RD_PARTY_ENABLE_MBEDTLS_TESTS
                bool "Enable Build MbedTLS Test Programs"
                select RTSMART_COPY_LIBS_TEST
                default n
        endif

endmenu
